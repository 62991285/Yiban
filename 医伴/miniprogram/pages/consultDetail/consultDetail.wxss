/* pages/consultDetail/consultDetail.wxss */
.assistant-page {
  width: 100%;
  min-height: 100vh;
  background-color: #fff;
  padding-top: 20rpx;
  box-sizing: border-box;
}

/* 返回按钮 */
.back-btn {
  padding-left: 20rpx;
  margin-bottom: 30rpx;
}
.back-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 欢迎语区域 */
.welcome-area {
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}
.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}
.welcome-desc {
  font-size: 28rpx;
  line-height: 1.5;
}

/* 示例问题区域 */
.example-area {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  margin: 0 30rpx 60rpx;
}
.example-label {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-bottom: 20rpx;
}
.example-btn {
  background-color: #81C784;
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 25rpx;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
  width: fit-content;
}

/* 功能按钮区域 */
.func-bar {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}
.func-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}
.func-item image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}
.func-name {
  font-size: 26rpx;
  margin-bottom: 5rpx;
}
.func-desc {
  font-size: 22rpx;
  color: #999;
}

/* 输入区域 */
.input-area {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  border-top: 1rpx solid #eee;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
}
.voice-icon, .add-icon {
  width: 40rpx;
  height: 40rpx;
}
.input-box {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 15rpx 20rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
}