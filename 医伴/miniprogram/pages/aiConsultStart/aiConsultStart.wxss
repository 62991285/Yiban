/* pages/aiConsultStart/aiConsultStart.wxss */
.ai-consult-start-page {
  padding: 60rpx 40rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 主标题 */
.title-area {
  margin-top: 100rpx;
  text-align: center;
  margin-bottom: 80rpx;
}

.main-title {
  font-size: 60rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.2;
}

/* 功能介绍 */
.intro-area {
  margin-bottom: 100rpx;
}

.intro-item {
  background-color: white;
  padding: 40rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.intro-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.intro-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

/* 启动按钮 */
.start-btn-area {
  position: fixed;
  bottom: 60rpx;
  left: 0;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.start-btn {
  width: 100%;
  height: 100rpx;
  background-color: #07c160;
  color: white;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 50rpx;
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.3);
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.start-btn::after {
  border: none;
}
