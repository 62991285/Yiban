/* pages/consultDetail/consultDetail.wxss */
.assistant-page {
  width: 100%;
  min-height: 100vh;
  background-color: #fff;
  padding-top: 20rpx;
  box-sizing: border-box;
}

.input-box {
  width: 75%;
  min-height: 80rpx;
  max-height: 200rpx;
  background-color: #F5F5F5;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.5;
}

/* 欢迎语区域 */
.welcome-area {
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}
.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}
.welcome-desc {
  font-size: 28rpx;
  line-height: 1.5;
}

/* 示例问题区域 */
.example-area {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  margin: 0 30rpx 60rpx;
}
.example-label {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-bottom: 20rpx;
}
.example-btn {
  background-color: #81C784;
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 25rpx;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
  width: fit-content;
}

/* 功能按钮区域 */
.func-bar {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}
.func-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}
.func-item image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}
.func-name {
  font-size: 26rpx;
  margin-bottom: 5rpx;
}
.func-desc {
  font-size: 22rpx;
  color: #999;
}

/* 输入区域 */
.input-area {
  display: flex;
  align-items: flex-end;
  padding: 15rpx 20rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid #EEEEEE;
  box-sizing: border-box;
}

.voice-icon, .add-icon {
  width: 40rpx;
  height: 40rpx;
}


/* AI问诊流程图样式 */
.flow-chart-container {
  padding: 30rpx;
  margin-bottom: 40rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.flow-chart-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
  color: #333;
}

.flow-chart {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}

.flow-step {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  cursor: pointer;
  flex: 1;
  margin: 0 10rpx;
  min-width: 180rpx;
  max-width: 220rpx;
  transition: all 0.3s ease;
}

.flow-step:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
  color: #333;
}

.step-desc {
  font-size: 22rpx;
  color: #999;
}

.flow-arrow {
  font-size: 40rpx;
  color: #07c160;
  margin: 0 20rpx;
  font-weight: bold;
  width: 40rpx;
  text-align: center;
}

/* 操作按钮区域 */
.action-buttons {
  padding: 0 30rpx;
  margin-bottom: 120rpx; /* 为底部输入区域留出空间 */
}

.start-btn {
  width: 100%;
  height: 100rpx;
  background-color: #07c160;
  color: white;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 50rpx;
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.3);
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.start-btn::after {
  border: none;
}