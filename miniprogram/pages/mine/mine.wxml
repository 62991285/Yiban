<!--pages/mine/mine.wxml-->
<view class="mine-page">
  <!-- 用户信息区域 -->
  <view class="user-info-section">
    <view class="user-header" bindtap="onUserInfoTap">
      <image class="user-avatar" src="{{userInfo.avatarUrl || '../../images/avatar.png'}}" mode="aspectFill"></image>
      <view class="user-detail">
        <text class="user-nickname">{{userInfo.nickName || '点击登录'}}</text>
        <text class="user-motto">{{userInfo.motto || '完善个人信息'}}</text>
      </view>
      <image class="arrow-icon" src="../../images/arrow.svg" mode="aspectFit"></image>
    </view>
  </view>
  
  <!-- 用户信息列表 -->
  <view class="info-list">
    <view class="info-item">
      <text class="info-label">性别</text>
      <text class="info-value">{{userInfo.gender === 1 ? '男' : userInfo.gender === 2 ? '女' : '未知'}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">地区</text>
      <text class="info-value">{{userInfo.province || ''}} {{userInfo.city || ''}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">语言</text>
      <text class="info-value">{{userInfo.language || '中文'}}</text>
    </view>
  </view>
  
  <!-- 操作按钮 -->
  <view class="action-buttons">
    <button class="action-btn" type="primary" bindtap="onLoginTap" wx:if="{{!isLogin}}">登录</button>
    <button class="action-btn" type="default" bindtap="onLogoutTap" wx:else>退出登录</button>
    <button class="action-btn" type="default" bindtap="onEditInfoTap" wx:if="{{isLogin}}">编辑信息</button>
  </view>
</view>