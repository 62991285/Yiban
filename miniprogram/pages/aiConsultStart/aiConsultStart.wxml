<!--pages/aiConsultStart/aiConsultStart.wxml-->
<view class="ai-consult-start-page">
  <!-- 主标题 -->
  <view class="title-area">
    <text class="main-title">AI辅助问诊</text>
  </view>

  <!-- 功能介绍 -->
  <view class="intro-area">
    <view class="intro-item">
      <text class="intro-title">智能问诊</text>
      <text class="intro-desc">基于AI技术的智能问诊系统，为您提供专业的健康咨询服务。</text>
    </view>
    <view class="intro-item">
      <text class="intro-title">症状分析</text>
      <text class="intro-desc">输入您的症状信息，AI将为您分析可能的健康问题。</text>
    </view>
    <view class="intro-item">
      <text class="intro-title">健康建议</text>
      <text class="intro-desc">根据您的情况，提供个性化的健康建议和注意事项。</text>
    </view>
  </view>

  <!-- 启动按钮 -->
  <view class="start-btn-area">
    <button class="start-btn" bindtap="startConsult">启动问诊</button>
  </view>
</view>