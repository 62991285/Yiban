/* pages/homepage/homepage.wxss */
/* 页面容器 */
.page-container {
  width: 100%;
  height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

/* 定位栏 */
.location-bar {
  height: 80rpx;
  background-color: #4A90E2;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  /* 移除 space-between，改为 flex-start 让元素靠左排列 */
  justify-content: flex-start;
  /* 增加元素间距 */
  gap: 20rpx;
}

/* 刷新按钮样式（保留原有样式，无需修改） */
.refresh-btn {
  font-size: 28rpx;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  line-height: 1;
}
.refresh-btn::after {
  border: none;
}
.refresh-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
}

.location-icon image {
  width: 40rpx;
  height: 40rpx;
}

/* 空内容区域 */
.empty-area {
  flex: 1;
  background-color: #87E8DE;
}

/* AI问诊区域 */
.consult-area {
  height: 500rpx;
  background-color: #81C784;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.consult-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}
.go-btn {
  font-size: 44rpx;
  padding: 20rpx 50rpx;
  background-color: transparent;
  border: 2rpx solid #000;
  border-radius: 8rpx;
  line-height: 1;
}
.go-btn::after {
  border: none;
}
.go-btn:active {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.8;
}

/* 底部导航栏 */
.tab-bar {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #eee;
}
.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
}
.tab-item image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}
.tab-item.active text {
  color: #00C853;
}