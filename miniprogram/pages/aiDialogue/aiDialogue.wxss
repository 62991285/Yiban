.ai-dialogue-page { 
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fff8 0%, #e8f5e8 100%);
  display: flex;
  flex-direction: column;
  position: relative; 
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 顶部AI状态栏 */
.ai-status-bar {
  background: linear-gradient(90deg, #4CAF50, #66BB6A);
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(76, 175, 80, 0.2);
  position: relative;
  z-index: 100;
}
.ai-status-indicator {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #fff;
  opacity: 0.3;
}
.status-dot.active {
  opacity: 1;
  animation: pulse-status 2s ease-in-out infinite;
}
.status-text {
  color: white;
  font-size: 26rpx;
  font-weight: 500;
}
.session-info {
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}
.session-count {
  color: white;
  font-size: 22rpx;
}

/* 问诊任务描述区 */
.task-description-bar {
  background: linear-gradient(135deg, #ffffff 0%, #f8fff8 100%);
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #e8f5e8;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}
.task-summary {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.task-icon {
  font-size: 32rpx;
}
.task-text {
  flex: 1;
  word-break: break-word;
  font-size: 28rpx;
  color: #2E7D32;
  font-weight: 500;
}
.toggle-task {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #4CAF50;
  cursor: pointer;
  font-weight: bold;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  background: rgba(76, 175, 80, 0.1);
}
.task-detail {
  margin-top: 20rpx;
  padding: 20rpx;
  border-top: 1rpx dashed #C8E6C9;
  font-size: 26rpx;
  color: #4CAF50;
  line-height: 1.6;
  background: rgba(200, 230, 201, 0.1);
  border-radius: 12rpx;
}

/*聊天区*/
.chat-history {
  flex: 1;
  padding: 0;
  overflow-y: auto;
  background: transparent;
}

/* 聊天容器 */
.chat-container {
  padding: 30rpx;
  min-height: 100%;
  display: flex;
  flex-direction: column;
}

.message-wrapper {
  margin-bottom: 40rpx;
  animation: slide-in 0.3s ease-out;
}

.ai-wrapper {
  display: flex;
  justify-content: flex-start;
}

.user-wrapper {
  display: flex;
  justify-content: flex-end;
}

/* 消息气泡增强 */
.content {
  max-width: 75%;
  padding: 24rpx 28rpx;
  border-radius: 24rpx;
  position: relative;
  word-wrap: break-word;
  line-height: 1.6;
  font-size: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.content:active {
  transform: scale(0.98);
}

/*AI内容*/
.ai-message .content {
  background: linear-gradient(135deg, #ffffff 0%, #f8fff8 100%);
  border-bottom-left-radius: 8rpx;
  margin-left: 24rpx;
  border: 1rpx solid #e8f5e8;
  color: #2E7D32;
}

.ai-message .content::before {
  content: '';
  position: absolute;
  left: -12rpx;
  top: 20rpx;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-right-color: #ffffff;
  border-left: none;
}

/*用户内容*/
.user-message .content {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  color: #FFFFFF;
  border-bottom-right-radius: 8rpx;
  margin-right: 24rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.user-message .content::after {
  content: '';
  position: absolute;
  right: -12rpx;
  top: 20rpx;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-left-color: #4CAF50;
  border-right: none;
}

.text {
  font-size: 30rpx;
  line-height: 1.6;
  display: block;
}

.user-message .text {
  color: #FFFFFF;
}
.text {
  font-size: 28rpx;
  line-height: 1.6;
  display: block;
}

.user-message .text {
  color: #FFFFFF;
}

.options {
  margin-top: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.option {
  padding: 16rpx 28rpx;
  background: linear-gradient(135deg, #f8fff8 0%, #e8f5e8 100%);
  border: 1rpx solid #C8E6C9;
  border-radius: 28rpx;
  font-size: 26rpx;
  color: #2E7D32;
  cursor: pointer;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
}

.option:active {
  transform: translateY(-2rpx) scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.25);
  background: linear-gradient(135deg, #e8f5e8 0%, #c8f0c8 100%);
}

.option-hover {
  background: linear-gradient(135deg, #e8f5e8 0%, #a5d6a7 100%) !important;
  transform: translateY(-1rpx);
}

/* ======== AI风格输入框容器 ======== */
.ai-input-container {
  position: relative;
  background: linear-gradient(180deg, #ffffff 0%, #f8fff8 100%);
  border-top: 1rpx solid #e8f5e8;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.06);
  z-index: 10;
}

.input-wrapper-modern {
  position: relative;
  margin: 24rpx 30rpx;
  background: #ffffff;
  border-radius: 24rpx;
  border: 2rpx solid #e8f5e8;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.input-wrapper-modern:focus-within {
  border-color: #4CAF50;
  box-shadow: 0 4rpx 24rpx rgba(76, 175, 80, 0.15);
  transform: translateY(-1rpx);
}

.modern-input-box {
  width: 100%;
  min-height: 88rpx;
  max-height: 200rpx;
  background: transparent;
  padding: 20rpx 140rpx 20rpx 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  line-height: 1.6;
  color: #2E7D32;
}

.input-wrapper-modern .modern-send-btn {
  position: absolute !important;
  right: 12rpx !important;
  bottom: 12rpx !important;
  width: 38rpx !important;
  height: 56rpx !important;
  background: linear-gradient(135deg, #e8f5e8 0%, #c8f0c8 100%) !important;
  color: #4CAF50 !important;
  font-size: 26rpx !important;
  border-radius: 16rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  box-shadow: 0 2rpx 12rpx rgba(76, 175, 80, 0.15) !important;
  border: none !important;
}

.modern-send-btn::after {
  border: none;
}

.modern-send-btn.send-btn-active {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(76, 175, 80, 0.4);
  transform: scale(1.05);
}

.modern-send-btn:disabled {
  background: #f5f5f5;
  color: #ccc;
  box-shadow: none;
  transform: none;
}

.send-text-modern {
  font-size: 20rpx;
  font-weight: 500;
}

/* 外部字符计数 */
.outside-char-count {
  position: absolute;
  right: 50rpx;
  bottom: 100rpx;
  z-index: 5;
}

.char-count-modern {
  font-size: 20rpx;
  color: #999;
  background: rgba(0, 0, 0, 0.08);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}


.payment-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.payment-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: center;
  display: block;
  margin-bottom: 20rpx;
}
.modal-content {
  background-color: #FFFFFF;
  width: 90%;
  max-width: 600rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #EEEEEE;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.close-btn {
  font-size: 48rpx;
  color: #999;
  cursor: pointer;
  line-height: 1;
}
.modal-body {
  padding: 30rpx;
}
.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #EEEEEE;
  display: flex;
  gap: 20rpx;
}
.btn {
  flex: 1;
  height: 80rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-confirm {
  background-color: #07C160;
  color: #FFFFFF;
}
.btn::after {
  border: none;
}

.bottom-btn-area {
  padding: 20rpx 40rpx 40rpx;
  background-color: #F6F6F6;
}
.next-btn {
  width: 100%;
  height: 100rpx;
  background-color: #07C160;
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 50rpx;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.3);
}
.next-btn::after {
  border: none;
}

::-webkit-scrollbar {
  width: 4rpx;
}
::-webkit-scrollbar-track {
  background: #F1F1F1;
}
::-webkit-scrollbar-thumb {
  background: #C1C1C1;
  border-radius: 2rpx;
}
::-webkit-scrollbar-thumb:hover {
  background: #A8A8A8;
}




/* 聊天控制区 */
.chat-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid #e8f5e8;
  position: relative;
  z-index: 20;
}

.delete-chat-history {
  text-align: center;
  color: #f44336;
  font-size: 24rpx;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(244, 67, 54, 0.1);
  border: 1rpx solid rgba(244, 67, 54, 0.2);
  cursor: pointer;
  transition: all 0.2s ease;
}

.delete-chat-history:active {
  background: rgba(244, 67, 54, 0.2);
  transform: scale(0.95);
}

.chat-stats {
  display: flex;
  gap: 20rpx;
}

.message-count {
  font-size: 22rpx;
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

/* ======== 滑动式功能按钮栏 ======== */
.scroll-functional-bar {
  position: relative;
  background: linear-gradient(180deg, #ffffff 0%, #f8fff8 100%);
  border-bottom: 1rpx solid #e8f5e8;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  z-index: 15;
}

.functional-scroll-view {
  width: 100%;
  height: 120rpx;
  white-space: nowrap;
}

.functional-list {
  display: flex;
  padding: 20rpx 30rpx;
  gap: 24rpx;
  align-items: center;
  height: 100%;
}

.functional-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #f8fff8 0%, #e8f5e8 100%);
  border: 1rpx solid #C8E6C9;
  border-radius: 20rpx;
  min-width: 120rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.1);
}

.func-icon {
  font-size: 32rpx;
  line-height: 1;
}

.func-text {
  font-size: 20rpx;
  color: #2E7D32;
  font-weight: 500;
}

.functional-item:active {
  background: linear-gradient(135deg, #e8f5e8 0%, #a5d6a7 100%);
  transform: translateY(-2rpx) scale(0.95);
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.2);
}

.scroll-indicator {
  display: flex;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 0 20rpx;
}

.scroll-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #C8E6C9;
  transition: all 0.3s ease;
}

.scroll-dot.active {
  background: #4CAF50;
  transform: scale(1.2);
}

/* ======== 新浮动按钮 - 位于聊天控制右上角 ======== */
.floating-plus-btn-new {
  position: absolute;
  top: -50rpx;
  right: 120rpx;
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 24rpx rgba(76, 175, 80, 0.4);
  z-index: 25;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.floating-plus-btn-new:active {
  transform: scale(0.92) translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.4);
}

.floating-plus-btn-new.mode-add {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
}

.floating-plus-btn-new.mode-delete {
  background: linear-gradient(135deg, #f44336 0%, #ff7043 100%);
  box-shadow: 0 6rpx 24rpx rgba(244, 67, 54, 0.4);
}

.fab-icon-new {
  font-size: 36rpx;
  line-height: 1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.fab-tooltip-new {
  position: absolute;
  right: 100rpx;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.85);
  color: white;
  padding: 10rpx 14rpx;
  border-radius: 8rpx;
  font-size: 18rpx;
  white-space: nowrap;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.floating-plus-btn-new:active .fab-tooltip-new {
  opacity: 1;
  transform: translateY(-50%) translateX(-6rpx);
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .functional-item {
    min-width: 100rpx;
    padding: 12rpx 16rpx;
  }
  
  .func-text {
    font-size: 18rpx;
  }
  
  .modern-input-box {
    padding: 16rpx 120rpx 16rpx 20rpx;
    font-size: 28rpx;
  }
  
  .modern-send-btn {
    width: 80rpx;
    height: 56rpx;
    right: 8rpx;
    bottom: 8rpx;
  }
  
  .floating-plus-btn-new {
    width: 76rpx;
    height: 76rpx;
    font-size: 38rpx;
    right: 90rpx;
  }
}

/* AI正在输入指示器 */
.typing-indicator {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.typing-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #4CAF50;
  animation: typing-bounce 1.4s ease-in-out infinite both;
}

.dot-1 { animation-delay: -0.32s; }
.dot-2 { animation-delay: -0.16s; }
.dot-3 { animation-delay: 0s; }

.typing-text {
  font-size: 26rpx;
  color: #4CAF50;
  font-style: italic;
}

/* 动画效果 */
@keyframes pulse-status {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.1); }
}

@keyframes slide-in {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes typing-bounce {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1.2);
    opacity: 1;
  }
}

.animated-message {
  animation: slide-in 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 滚动条美化 */
::-webkit-scrollbar {
  width: 8rpx;
}

::-webkit-scrollbar-track {
  background: rgba(200, 230, 201, 0.3);
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(180deg, #4CAF50, #66BB6A);
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(180deg, #388E3C, #4CAF50);
}

