.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 统一模块样式 */
.module {
  width: 100%;
  margin-bottom: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.header {
  width: 100%;
  margin-bottom: 30rpx;
  background: linear-gradient(135deg, #00C853 0%, #00E676 100%);
  color: white;
  border-radius: 10rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-left: 10rpx;
}

.quick-entry {
  width: 100%;
  margin-bottom: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-around;
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.quick-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
  color: #00C853;
}

.quick-text {
  font-size: 28rpx;
  color: #333;
}

.hospital-area {
  width: 100%;
  margin-bottom: 30rpx;
  background-color: #E8F5E9;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #2E7D32;
}

.area-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.area-item {
  width: 48%;
  padding: 20rpx;
  background-color: white;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  text-align: left;
  transition: all 0.3s;
  border: 2rpx solid #C8E6C9;
}

.area-item.active {
  background-color: #00C853;
  color: white;
  border-color: #00C853;
}

.area-name {
  font-size: 28rpx;
}

.department {
  width: 100%;
  margin-bottom: 30rpx;
  background-color: #FFF8E1;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.department-container {
  display: flex;
  height: 500rpx;
}

.department-left {
  width: 30%;
  border-right: 1rpx solid #FFE082;
  overflow-y: auto;
  background-color: white;
  border-radius: 8rpx 0 0 8rpx;
}

.department-main {
  padding: 25rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #FFE082;
  transition: all 0.3s;
  background-color: #FFF8E1;
}

.department-main.active {
  background-color: #FFE082;
  font-weight: bold;
  color: #F57F17;
}

.department-right {
  width: 70%;
  padding-left: 30rpx;
  overflow-y: auto;
  background-color: white;
  border-radius: 0 8rpx 8rpx 0;
}

.department-sub {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
  transition: all 0.3s;
  color: #333;
}

.department-sub:active {
  background-color: #F5F5F5;
}

.department-name {
  font-size: 28rpx;
}